<div class="container-fluid">

  <div class="row">
    <div class="col-md-6">

      <h1>Log In</h1>

      <%= form_tag sessions_path do %>
        <div class="form-group">
          <%= label_tag :email, 'Email:', class: 'sr-only' %>
          <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :password, 'Password:', class: 'sr-only' %>
          <%= password_field_tag :password, '', placeholder: 'Password', class: 'form-control' %>
        </div>
        <%= submit_tag "Login", :class => 'btn btn-info' %>
      <% end %>


    </div>
  </div>

</div>
