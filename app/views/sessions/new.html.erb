<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= text_field_tag :email, params[:email], :placeholder => 'Email' %>
  </div>
  <div class="form-group">
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log In", :class => 'btn btn-primary' %>
<% end %>
