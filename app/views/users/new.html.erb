<div class="container-fluid">

  <div class="row">
    <div class="col-md-6">
      <h1>Sign Up </h1>

      <%= form_for @user, role: 'form' do |f| %>
        <% if @user.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, 'Full Name:', class: 'sr-only' %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email, 'Email:', class: 'sr-only' %>
          <%= f.text_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone, 'Phone Number:', class: 'sr-only' %>
          <%= f.text_field :phone, placeholder: 'Phone Number', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :address, 'Address:', class: 'sr-only' %>
          <%= f.text_area :address, placeholder: 'Address', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'Password:', class: 'sr-only' %>
          <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, 'Password Confirm:', class: 'sr-only' %>
          <%= f.password_field :password_confirmation, placeholder: 'Password Confirm', class: 'form-control' %>
        </div>
        <%= f.submit "Register", :class => 'btn btn-info' %>
      <% end %>

    </div>
  </div>

</div>
